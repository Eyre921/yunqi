# 数据库配置 - PostgreSQL
# 格式: postgresql://用户名:密码@主机:端口/数据库名
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# NextAuth 认证配置
# 应用访问URL
NEXTAUTH_URL="http://localhost:3000"
# NextAuth 密钥 - 用于加密会话令牌（生产环境必须更改）
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# 阿里云OSS配置
# OSS区域
ALI_OSS_REGION="oss-cn-hangzhou"
# 阿里云访问密钥ID
ALI_OSS_ACCESS_KEY_ID="your-access-key-id"
# 阿里云访问密钥Secret
ALI_OSS_ACCESS_KEY_SECRET="your-access-key-secret"
# OSS存储桶名称
ALI_OSS_BUCKET="your-bucket-name"
# OSS服务端点
ALI_OSS_ENDPOINT="https://oss-cn-hangzhou.aliyuncs.com"

# 前端可访问的OSS配置
# 前端使用的OSS端点（不包含https://）
NEXT_PUBLIC_ALI_OSS_ENDPOINT="oss-cn-hangzhou.aliyuncs.com"
# 前端使用的OSS存储桶名称
NEXT_PUBLIC_ALI_OSS_BUCKET="your-bucket-name"

# 管理员默认密码
# 系统初始化时创建的管理员账户密码
ADMIN_DEFAULT_PASSWORD="your-admin-password"